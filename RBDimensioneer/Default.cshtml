@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "RB Dimensioneer - Home";
}

<div class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Welcome to RB Dimensioneer</h1>
                <p class="lead">Your trusted partner in dimensional engineering solutions</p>
                <a href="~/Contact" class="btn btn-primary btn-lg">Get Started</a>
            </div>
        </div>
    </div>
</div>

<div class="services-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Our Services</h2>
                <div class="section-divider"></div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="service-box">
                    <h3>Dimensional Analysis</h3>
                    <p>Advanced measurement and analysis solutions for precise engineering requirements.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-box">
                    <h3>Quality Control</h3>
                    <p>Comprehensive quality assurance and control services for manufacturing processes.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-box">
                    <h3>Technical Consulting</h3>
                    <p>Expert guidance and solutions for complex engineering challenges.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.hero-section {
    padding: 100px 0;
    background-color: #f8f9fa;
    text-align: center;
}

.hero-section h1 {
    font-size: 48px;
    margin-bottom: 20px;
    color: #333;
}

.hero-section .lead {
    font-size: 24px;
    color: #666;
    margin-bottom: 30px;
}

.services-section {
    padding: 80px 0;
}

.services-section h2 {
    text-align: center;
    margin-bottom: 40px;
    color: #333;
}

.section-divider {
    width: 60px;
    height: 3px;
    background-color: #007bff;
    margin: 0 auto 40px;
}

.service-box {
    padding: 30px;
    text-align: center;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.1);
    margin-bottom: 30px;
    transition: transform 0.3s ease;
}

.service-box:hover {
    transform: translateY(-5px);
}

.service-box h3 {
    color: #333;
    margin-bottom: 15px;
}

.service-box p {
    color: #666;
    line-height: 1.6;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    padding: 12px 30px;
    font-size: 18px;
    border-radius: 5px;
    transition: all 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}
</style>